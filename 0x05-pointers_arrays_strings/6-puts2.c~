#include "main.h"

/**
* puts2 - Prints every other character of a string, starting with the first character.
*
* @str: A pointer to the string to be processed.
*
* Description:
* This function takes a pointer to a string as a parameter and prints every
* other character of the string, starting with the first character, followed
* by a new line '\n'.
*
* Return: None.
*/
void puts2(char *str)
{
if (str != NULL)
{
int index = 0;

while (str[index] != '\0')
{
putchar(str[index]);
index += 2;
}

putchar('\n');
}
}

